/* pages/article/article.wxss */

.article {
  width: 100%;
  background-color: #ccc;
  padding: 30rpx;
}

.articleTitle {
  padding: 5px;
  text-align: center;
  font-size: 60rpx;
}

.time {
  float: right;
  padding-right: 20rpx;
  font-size: 30rpx;
}

.cover {
  height: 300rpx;
  margin-top: 60rpx;
}

.covreImg {
  width: 100%;
  height: inherit;
}

.content {
  background: rgba(0, 255, 0, 0.1);
  padding: 0 10px;
  overflow: hidden;
}

.contentImg {
  width: 100%;
}

/* .rec_title {
  padding-left: 10rpx;
} */

.recommend {
  width: 100%;
  margin-top: 20rpx;
}

.flex-wrp {
  display: flex;
  text-align: center;
}

.article-item {
  background: #fefefe;
  height: 300rpx;
  border: 1px solid #ccc;
  margin-top: 1px;
  border-radius: 15rpx;
  margin: 20rpx;
  position: relative;
}

.title {
  position: absolute;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  bottom: 0;
  right: 0;
  left: 0;
}

.btn-group {
  width: 100rpx;
  height: 200rpx;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}

.btn {
  /* display: inline-block; */
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin: 10rpx;
  font-size: 18rpx;
}

.rcmCoverImg {
  width: 100%;
  height: inherit
}
